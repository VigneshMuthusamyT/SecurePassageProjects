@model InstgramModel

@{
    ViewData["Title"] = "Edit";
}
<style>

    /* Form container */
    .premium-form {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
        transition: background-color 0.3s ease;
    }

        /* Form container hover effect */
        .premium-form:hover {
            background-color: #fff;
        }

    /* Form group */
    .form-group {
        margin-bottom: 20px;
    }

    /* Form label */
    label {
        display: block;
        font-size: 16px;
        font-weight: bold;
        margin-bottom: 5px;
    }

    /* Form input */
    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        outline: none;
        transition: border-color 0.3s ease;
    }

        /* Form input focus effect */
        .form-control:focus {
            border-color: #4CAF50; /* Green */
        }

    /* Submit button */
    .btn-submit {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        text-transform: uppercase;
        border: none;
        border-radius: 5px;
        background-color: #4CAF50; /* Green */
        cursor: pointer;
        outline: none;
        transition: background-color 0.3s ease;
    }

        /* Submit button hover effect */
        .btn-submit:hover {
            background-color: #45a049; /* Darker Green */
        }

    /* Back to Dash button */
    .back-to-dash {
        display: block;
        margin-top: 20px;
        text-align: center;
        text-decoration: none;
        color: #fff;
        background-color: #4CAF50; /* Green */
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        /* Back to Dash button hover effect */
        .back-to-dash:hover {
            background-color: #45a049; /* Darker Green */
        }

</style>
<h1>You</h1>

<h4>can edit your details</h4>
<hr />
<div class="row">
    <div class="col-md-4">


        <form asp-action="instaedit" id="googleForm" class="premium-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InstaId" />
            <input type="hidden" asp-for="AccounttypeIN" />


            <div class="form-group">
                <label class="control-label">INuserName</label>
                <input asp-for="INuserName" class="form-control" />
                <span asp-validation-for="INuserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="INPassword" class="control-label"></label>
                <input asp-for="INPassword" class="form-control" />
                <span asp-validation-for="INPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-submit">Submit</button>
        </form>

        <a href="@Url.Action("Dashboard","securepass")" class="back-to-dash">Back to Dashboard</a>

    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
