@model signupModel
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form Design | CodeLab</title>
    <style>
        * {
            margin :0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        .my-header,
        .my-footer {
            display: none;
        }

        html,
        body {
            display: grid;
            height: 100%;
            width: 100%;
            place-items: center;
            background: #f2f2f2;
        }

        ::selection {
            background: #4158d0;
            color: #fff;
        }

        .wrapper {
            width: 90%;
            max-width: 380px;
            margin: 57px auto;
            background: #fff;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            padding: 0px;
        }

        .title {
            font-size: 35px;
            font-weight: 600;
            text-align: center;
            line-height: 100px;
            color: #fff;
            user-select: none;
            border-radius: 15px 15px 0 0;
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            padding: 20px;
        }

        form {
            padding: 23px 30px 50px 30px;
        }

        .field {
            margin-bottom: 27px; /* Adjusted margin for better spacing */
            position: relative;
        }

        input {
            height: 50px;
            width: 100%;
            outline: none;
            font-size: 17px;
            padding-left: 20px;
            border: 1px solid lightgrey;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

            input:focus,
            input:valid {
                border-color: #4158d0;
            }

        label {
            position: absolute;
            top: 50%;
            left: 20px;
            color: #999999;
            font-weight: 400;
            font-size: 17px;
            pointer-events: none;
            transform: translateY(-50%);
            transition: all 0.3s ease;
        }

        input:focus ~ label,
        input:valid ~ label {
            top: 0%;
            font-size: 16px;
            color: #4158d0;
            background: #fff;
            transform: translateY(-50%);
        }

        input[type="submit"] {
            color: #fff;
            border: none;
            padding: 10px 0; /* Adjusted padding for better button appearance */
            margin-top: -10px;
            font-size: 20px;
            font-weight: 500;
            cursor: pointer;
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            transition: all 0.3s ease;
            width: 100%;
            border-radius: 25px;
        }

            input[type="submit"]:active {
                transform: scale(0.95);
            }

        .signup-link {
            color: #262626;
            margin-top: 20px;
            text-align: center;
        }

            .signup-link a {
                color: #4158d0;
                text-decoration: none;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <div class="wrapper">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="title">
            SignUp
        </div>
        <form asp-action="signin" method="post">
            <div class="field">
                <input type="text" id="UserName" name="UserName" required>
                <label>UserName</label>
            </div>
            @{
                var phoneNumberExists = ViewBag.PhoneNumberExists ?? false;
            }
            <div class="field">
                <input type="text" id="PhoneNumber" name="PhoneNumber" required>
                <label>PhoneNumber</label>
                @if (phoneNumberExists)
                {
                    <span asp-validation-for="PhoneNumber" style="color:red;margin-left: 16px; ">
                        The phone number is already in use.
                    </span>
                }
            </div>
            <div class="field">
                <input type="password" id="PassWord" name="PassWord" required>
                <label>PassWord</label>
            </div>
            <div class="field">
                <input type="submit" value="Login">
            </div>
            <div class="signup-link">
                Already have an account? <a href="@Url.Action("Logiin","securepass")">Login now</a>
            </div>
        </form>
    </div>
</body>

</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
