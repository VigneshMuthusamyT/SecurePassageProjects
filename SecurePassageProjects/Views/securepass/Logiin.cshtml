@model signupModel
@using Newtonsoft.Json

<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form Design | CodeLab</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        html,
        body {
            height: 100%;
            background: #f2f2f2;
        }

        .wrapper {
            width: 90%; /* Adjusted width for better responsiveness */
            max-width: 380px; /* Added max-width for smaller screens */
            margin: 57px auto; /* Centering the wrapper */
            background: #fff;
            border-radius: 15px;
            box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
            padding: 14px; /* Adjusted padding for better spacing */
        }

        .title {
            font-size: 35px;
            font-weight: 600;
            text-align: center;
            line-height: 100px; /* Changed line-height to padding for better centering */
            color: #fff;
            user-select: none;
            border-radius: 15px 15px 0 0;
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            padding: 20px; /* Added padding for better spacing */
        }

        form {
            padding: 20px 0; /* Adjusted padding for better spacing */
        }

        .field {
            margin-bottom: 20px; /* Changed margin-top to margin-bottom for better spacing */
            position: relative;
        }

        input {
            height: 50px;
            width: 100%;
            outline: none;
            font-size: 17px;
            padding-left: 20px;
            border: 1px solid lightgrey;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        input:focus,
        input:valid {
            border-color: #4158d0;
        }

        label {
            position: absolute;
            top: 50%;
            left: 20px;
            color: #999999;
            font-weight: 400;
            font-size: 17px;
            pointer-events: none;
            transform: translateY(-50%);
            transition: all 0.3s ease;
        }

        input:focus~label,
        input:valid~label {
            top: 0%;
            font-size: 16px;
            color: #4158d0;
            background: #fff;
            transform: translateY(-50%);
        }

        .content {
            display: flex;
            align-items: center;
            justify-content: space-between; /* Adjusted alignment */
            font-size: 16px;
            margin-bottom: 20px; /* Added margin for better spacing */
        }

        .pass-link a {
            color: #262626;
            user-select: none;
            padding-left: 5px;
            text-decoration: none; /* Added text-decoration */
        }

        .signup-link {
            color: #262626;
            margin-top: 20px;
            text-align: center;
        }

        .signup-link a {
            color: #4158d0;
            text-decoration: none;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }

        input[type="submit"] {
            color: #fff;
            border: none;
            padding: 10px 0; /* Adjusted padding for better button appearance */
            font-size: 20px;
            font-weight: 500;
            cursor: pointer;
            background: linear-gradient(-135deg, #c850c0, #4158d0);
            transition: all 0.3s ease;
            width: 100%; /* Ensure button takes full width */
            border-radius: 25px; /* Added border-radius for consistency */
        }

        input[type="submit"]:active {
            transform: scale(0.95);
        }

        /* Mobile responsiveness */
        @@media screen and (max-width: 480px) {
            .title {
                font-size: 28px;
                line-height: 80px;
            }
        }
    </style>
</head>

<body>

    <div class="wrapper">
        <div class="title">
            Login
        </div>
        <form asp-action="Logiin" method="post">
            <div class="field">
                <input type="text" name="PhoneNumber" required>
                <label>PhoneNumber</label>
            </div>
            <div class="field">
                <input type="password" name="PassWord" required>
                <label>Password</label>
            </div>
            <div class="content">
                <div class="pass-link">
                    <a href="@Url.Action("forgotpass","securepass")">Forgot password?</a>
                </div>
            </div>
            <div class="field">
                <input type="submit" value="Login">
            </div>
            <div class="signup-link">
                Not a member? <a href="@Url.Action("signin","securepass")">Signup now</a>
            </div>
        </form>
    </div>

    @{
        // Retrieve the boolean value from ViewBag
        bool phoneNumberExists = ViewBag.PhoneNumberExists ?? false;
    }

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/json2/20160511/json2.js"></script>

    <script>
        $(document).ready(function () {
            var phoneNumberExists = @JsonConvert.SerializeObject(phoneNumberExists).ToLower(); // Serialize the boolean value to JSON
            if (phoneNumberExists) {
                alert("Phone number not found or password mismatch. Please sign up for a new account")
            }
        });
    </script>
</body>

</html>
